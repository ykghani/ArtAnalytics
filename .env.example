# Logging Configuration
LOG_LEVEL=verbose  # Options: none, verbose, errors_only

# Download Configuration
BATCH_SIZE=100
RATE_LIMIT_DELAY=1.0
ERROR_RETRY_DELAY=5.0
MAX_RETRIES=5
MAX_DOWNLOADS=  # Optional: leave empty for no limit
MAX_STORAGE_GB=  # Optional: leave empty for no limit

# Museum API Configuration
## Art Institute of Chicago
AIC_API_KEY=  # Optional
